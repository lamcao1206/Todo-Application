<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .container {
        width: 1000px;
      }
      .btn-primary:hover {
        background-color: #0056b3;
        color: #ffffff;
      }
      .btn-icon {
        display: flex;
        align-items: center;
      }
      .btn-icon img {
        margin-right: 5px;
        filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(93deg) brightness(103%) contrast(103%);
      }
    </style>
  </head>
  <body>
    <div class="container mt-2">
      <h1 class="display-6 text-primary text-center">ToDo List</h1>
      <form id="taskForm" class="mt-4 mb-8">
        <div class="input-group mb-4">
          <input type="text" class="form-control" id="taskInput" placeholder="What are you planning to do ?" required />
          <button type="submit" class="btn btn-primary btn-icon input-group-append">
            <img src="/add.svg" type="image/svg+xml" alt="Add" width="16" height="16" />
            Add
          </button>
        </div>
      </form>
      <h1 class="display-6">Tasks</h1>
      <div id="taskContainer">
        <% if (tasks.length === 0) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-danger">No Tasks Available</h5>
            <p class="card-text">You have no tasks at the moment. Please add a new task.</p>
          </div>
        </div>
        <% } else { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Description</th>
              <th scope="col">Completed</th>
            </tr>
          </thead>
          <tbody id="taskTableBody">
            <% tasks.forEach((task, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= task.description %></td>
              <td><%= task.completed ? "Yes" : "No" %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
    <script>
      document.getElementById("taskForm").addEventListener("submit", async function (event) {
        event.preventDefault();
        const taskInput = document.getElementById("taskInput");
        const description = taskInput.value;

        const response = await fetch("/tasks", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ description }),
        });

        if (response.ok) {
          const newTask = await response.json();
          let taskTableBody = document.getElementById("taskTableBody");

          if (!taskTableBody) {
            const taskContainer = document.getElementById("taskContainer");
            taskContainer.innerHTML = `
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Description</th>
                    <th scope="col">Completed</th>
                  </tr>
                </thead>
                <tbody id="taskTableBody"></tbody>
              </table>
            `;
            taskTableBody = document.getElementById("taskTableBody");
          }

          const newRow = document.createElement("tr");
          newRow.innerHTML = `
            <th scope="row">${taskTableBody.children.length + 1}</th>
            <td>${newTask.description}</td>
            <td>${newTask.completed ? "Yes" : "No"}</td>
          `;
          taskTableBody.appendChild(newRow);
          taskInput.value = "";
        } else {
          console.error("Failed to add task");
        }
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
